<!-- Validation failure messages -->
<% if @venue.present? %>
  <% if @venue.errors.any? %>
    <% @venue.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new venue
</h1>


<hr>

<!-- Form venue start -->
<form action="/create_venue" method="post">
<!-- Form venue end -->

  <!-- Label and input for neighborhood_id start -->
  <div class="form-group">
    <label for="neighborhood_id">
      Neighborhood
    </label>

    <!-- Input for neighborhood_id start -->
    <input type="text" id="neighborhood_id" name="neighborhood_id" class="form-control" value="<%= @venue.neighborhood_id %>">
    <!-- Input for neighborhood_id end -->
  </div>
  <!-- Label and input for neighborhood_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create venue
  </button>
</form>

<hr>

<a href="/venues">
  Go back
</a>
