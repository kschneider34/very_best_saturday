<!-- Validation failure messages -->
<% if @venue.errors.any? %>
  <% @venue.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit venue #<%= @venue.id %>
</h1>

<hr>

<!-- Form venue start -->
<form action="/update_venue/<%= @venue.id %>" method="post">
<!-- Form venue end -->

  <!-- Label and input for neighborhood_id start -->
  <div class="form-group">
    <label for="neighborhood_id">
      Neighborhood
    </label>

    <!-- Input for neighborhood_id start -->
    <input type="text" id="neighborhood_id" name="neighborhood_id" class="form-control" value="<%= @venue.neighborhood_id %>">
    <!-- Input for neighborhood_id end -->
  </div>
  <!-- Label and input for neighborhood_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update venue
  </button>
</form>

<hr>

<a href="/venues">
  Go back
</a>
